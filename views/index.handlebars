<div class="container">
    <div class="row text-center mt-3">
        <div class="col-4">
            <h2 class="mt-5 pt-5">Burgers Queued</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-4 text-center">
            <img class="mb-1" src="assets/img/burger.png" style="max-width: 200px;" alt="burger picture" />

            <h1 class="mt-2 mb-3">Eat-da-Burger!</h1>

            <form class="create-form">

                <div class="form-group">
                    <textarea class="py-4" rows="1" name="name" style="width: 100%;"></textarea>
                </div>

                <button class="mb-3 bg-primary border-primary text-white p-2 rounded" type="submit">Submit</button>

                <p><strong>Enter a burger you want to eat, then click the Submit button.</strong></p>
            </form>
        </div>

        <div class="col-4">
            <h2 class="mt-5 pt-5">Burgers Devoured</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>